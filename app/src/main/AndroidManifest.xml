        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".screens.PaymentDetailsActivity"></activity>
        <activity android:name=".screens.AppPaymentActivity" />
        <activity android:name=".screens.SettingsActivity" />
        <activity android:name=".screens.UsersActivity" />
        <activity android:name=".screens.MessagesActivity" />
        <activity android:name=".screens.ConsultationsActivity" />
        <activity android:name=".screens.HappinessActivity" />
