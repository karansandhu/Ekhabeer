        <activity android:name=".screens.InviteFriendsActivity" />
        <activity android:name=".screens.GiftActivity" />
        <activity android:name=".screens.BookingActivity" />
        <activity android:name=".screens.DoctorDetailsActivity" />
        <activity android:name=".screens.DoctorActivity" />
        <activity android:name=".screens.CategoryActivity" />
        <activity
            android:name=".screens.HomeActivity"
            android:launchMode = "singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.UserLoginActivity" />
        <activity android:name=".screens.UserRegistrationActivity" />
        <activity android:name=".screens.ChoiceActivity" />
        <activity android:name=".screens.WelcomeActivity" />
        <activity android:name=".screens.MainActivity" />
