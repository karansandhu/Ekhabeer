<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_user"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"
                android:src="@drawable/dumy_profile_pic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorBlack"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_fname"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_fname"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_lname"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_lname"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dob"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_dob"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_dob"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mobileno"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_no"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_no"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_email"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_email"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_city"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_city"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_country"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_country"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/et_profile_address"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/et_profile_address"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:background="@drawable/edittext_ll"
                        android:fontFamily="@font/poppins_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_save"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:layout_below="@+id/ll_login_fields"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_btn_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_centerInParent="true"
                        android:textColor="@color/colorWhite"/>

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>