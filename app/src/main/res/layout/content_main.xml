                    <TextView
                        android:id="@+id/title_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/law_leg"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:id="@+id/desc_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/small_dummy_text"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_regular"/>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_consultants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@color/colorRedText"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_consul_sech"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/scheduled"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/poppins_medium"/>

                    <LinearLayout
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/tv_consul_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelled"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/poppins_medium"/>

                    <LinearLayout
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/tv_consul_complete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/completed"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/poppins_medium"/>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_consults"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_one"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

